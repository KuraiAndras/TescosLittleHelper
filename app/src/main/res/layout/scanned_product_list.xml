<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:background="@drawable/recycler_view_list_item_border">

    <LinearLayout
        android:id="@+id/selectionDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/scannedProductDataNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mock Product" />

        <TextView
            android:id="@+id/scannedProductDataGtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123456789ABCD" />

        <TextView
            android:id="@+id/scannedProductDataDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Lorem ipsum dolor et..." />

        <TextView
            android:id="@+id/scannedProductDataPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="500 Ft" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/scanEditProduct"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:contentDescription="@string/delete"
        android:scaleType="fitXY"
        android:src="@drawable/ic_pencil_grey600_48dp" />

    <ImageButton
        android:id="@+id/scanDeleteButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:contentDescription="@string/delete"
        android:scaleType="fitXY"
        android:src="@drawable/ic_delete_red600_48dp" />

    <Button
        android:id="@+id/scanAddToCart"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_weight="3"
        android:background="@drawable/add_to_cart_button"
        android:textColor="#5C5B5B"
        android:text="@string/add_to_cart" />
</LinearLayout>